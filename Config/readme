<?php
/**
*	Copy this to the end of Config/core.php from CakePHP
*/

/**
 * Configure default language from i18n
 */
Configure::write('Config.language', 'esp');

/**
 * Configure vars from Snatcher Project
 */

/**
 * Size limit from files
 */
Configure::write('Snatcher.BinaryFiles.sizelimit', 55296);


/**
 * Activate suggestion for Translate
 */
Configure::write('Snatcher.Translate.active', false);

/**
 * Language to translate in ISO 629-1
 */
Configure::write('Snatcher.Translate.language', 'es');

/**
 * Text limit to use with TextHelper in index pages
 */
Configure::write('Snatcher.Config.textlimit', 100);

/**
 * Configuration for Characters id references
 */
Configure::write('Snatcher.Characters.type', array(
	'menu' => array('id' => 1, 'limit' => 224, 'maxLimit' => 240),
	'response_number' => array('id' => 70, 'limit' => 13),
	'response_text' => array('id' => 71, 'limit' => 13),
));

/**
 * Configuration for special Characters
 */
Configure::write('Snatcher.Characters.computer', "01");
Configure::write('Snatcher.Characters.menu', "38");
Configure::write('Snatcher.Characters.nobody', "44");

?>
